# Based on the following.
# https://gist.github.com/redoPop/444295
# https://wpengine.com/git/

# Ignore everything in the root except the "wp-content" directory.
/*
!.gitignore
!wp-content/

# Optionally track htaccess.
# !.htaccess
!export/
!import/

# Ignore everything in the "wp-content" directory, except the "themes" and "plugins" directories.
wp-content/*
!wp-content/themes/
!wp-content/plugins/

# Ignore everything in the "plugins" directory, except the plugins you
# specify (see the commented-out examples for hints on how to do this.)
wp-content/plugins/*
# !wp-content/plugins/my-single-file-plugin.php

# Ignore everything in the "themes" directory, except the themes you
# specify (see the commented-out example for a hint on how to do this.)
wp-content/themes/*
# !wp-content/themes/my-theme/
!wp-content/themes/abivirginia/

# Do not track select theme files
wp-content/themes/abivirginia/node_modules
wp-content/themes/abivirginia/functions/env-local.php

# Do not track some sass-generated files
.sass-cache/
*.css.map

# Ignore these files anywhere they appear
.DS_Store
.notes
